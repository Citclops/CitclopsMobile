<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FUScaleActivityExt" >
           
    <!-- Panel Take Photo -->	    
    <FrameLayout 
        android:id="@+id/fuscale_previewcontainer"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#CCFFFFFF"
	    android:visibility="gone">
        <FrameLayout 
			android:background="#CCFFFFFF"	        
		    android:layout_gravity="top"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >
		    <TextView
        		android:id="@+id/fuscale_preview_instructionstop"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:text="@string/main_panelfuscale_instructions1"
		        android:textAppearance="?android:attr/textAppearanceLarge" />	
		</FrameLayout>    
        <LinearLayout 
            android:background="#CCFFFFFF"            
	    	android:id="@+id/fuscale_container_teakephoto_widgets"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_gravity="bottom|center_horizontal"
	    	android:orientation="horizontal">
            <com.citclops.widgets.kImageButton
	            android:id="@+id/fuscale_quickHelpButton"
	            android:layout_width="80dp"
	            android:layout_height="80dp"
	            android:src="@drawable/quick_help" />
			<LinearLayout
	            android:id="@+id/fuscale_containerpitchwidgets"
		        android:layout_gravity="center|center_vertical"
		        android:orientation="horizontal"
		        android:layout_marginLeft="15dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" >
		        <ImageView
	            	android:contentDescription="@string/main_panelfuscale_pitch_content_description"
		            android:layout_width="40dp"
		            android:layout_height="40dp"
		            android:src="@drawable/pitch" />
			   	<TextView
			        android:id="@+id/fuscale_txtpitchvalue"
		            android:layout_gravity="center|center_vertical"
		            android:textSize="32sp"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"/>				    
			</LinearLayout>							
	        <com.citclops.widgets.kImageButton
	            android:id="@+id/fuscale_btobjetivo"
	            android:layout_gravity="center_vertical"
	            android:layout_marginLeft="20dip"
	            android:layout_width="100dip"
	            android:layout_height="100dip"
	            android:src="@drawable/objetivo" />
	    </LinearLayout>
  	</FrameLayout>
    
    <!-- Panel Show Photo, Select Rect, and choose FU Value -->	    
    <FrameLayout 
        android:id="@+id/fuscale_work_photo_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone">
        <ImageView
        	android:id="@+id/fuscale_work_photo_image"
            android:contentDescription="@string/main_panelfuscale_work_photo_content_description"
            android:background="#FF000000"
            android:layout_gravity="center_vertical|center_horizontal"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
		<LinearLayout
        	android:id="@+id/fuscale_work_photo_square_container"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical" >        			    			
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >			
			    <FrameLayout
       				android:id="@+id/fuscale_square_11"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>				    							   
			    <FrameLayout
       				android:id="@+id/fuscale_square_12"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>
			    <FrameLayout
       				android:id="@+id/fuscale_square_13"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>							    			
			</LinearLayout>		    				
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >			
			    <FrameLayout
       				android:id="@+id/fuscale_square_21"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>			
			    <FrameLayout
       				android:id="@+id/fuscale_square_22"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>			
			    <FrameLayout
       				android:id="@+id/fuscale_square_23"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>			
			</LinearLayout>						    
			<LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >			
			    <FrameLayout
       				android:id="@+id/fuscale_square_31"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>			
			    <FrameLayout
       				android:id="@+id/fuscale_square_32"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>			
			    <FrameLayout
       				android:id="@+id/fuscale_square_33"
			        android:layout_width="100dip"
			        android:layout_height="100dip"/>			
			</LinearLayout>
		</LinearLayout>
        <FrameLayout 
			android:background="#CCFFFFFF"	        
		    android:layout_gravity="bottom"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >
		    <TextView
       			android:id="@+id/fuscale_square_instructions"
       			android:layout_marginLeft="5dip"
       			android:layout_marginTop="2dip"
       			android:layout_marginBottom="2dip"
       			android:layout_marginRight="90dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		    <com.citclops.widgets.kImageButton
	            android:id="@+id/fuscale_select_square_ok_button"
	            android:layout_gravity="center|right"
	            android:layout_marginRight="5dip"
	            android:layout_marginLeft="10dip"
	            android:layout_width="80dip"
	            android:layout_height="80dip"
	            android:src="@drawable/photo_crop" />
		    	
		</FrameLayout>    
  	</FrameLayout>
        
    <!-- Panel Select FU Value -->	    
    <FrameLayout 
        android:id="@+id/fuscale_container_select_value"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FF000000"
	    android:visibility="gone">
		<ImageView
        	android:id="@+id/fuscale_select_fuvalue_image"
            android:contentDescription="@string/fuscale_select_fuvalue_image_content_description"
            android:background="@drawable/border_black"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
		   
        <FrameLayout 
        	android:id="@+id/fuscale_conatiner_select_fuvalue_text"
			android:background="#CCFFFFFF"	        
		    android:layout_gravity="top"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content" >
		    <TextView
       			android:id="@+id/fuscale_selectvalue_instructions"
       			android:layout_marginLeft="5dip"
       			android:layout_marginTop="2dip"
       			android:layout_marginBottom="2dip"
       			android:layout_marginRight="90dip"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/main_panelfuscale_select_color_description"
		        android:textSize="16sp"
		        android:textAppearance="?android:attr/textAppearanceLarge" />
		    <com.citclops.widgets.kImageButton
	            android:id="@+id/fuscale_selectvalue_ok_button"
	            android:layout_gravity="center|right"
	            android:layout_marginRight="0dip"
	            android:layout_marginLeft="0dip"
	            android:layout_width="70dip"
	            android:layout_height="70dip"
	            android:src="@drawable/fuscale_value_select" />		    	
		</FrameLayout>
        
	    <RelativeLayout
	        android:id="@+id/fuscale_marcoFuScaleContainer"
	        android:layout_marginLeft="15dip"
	        android:layout_marginRight="15dip"
	        android:layout_width="match_parent"
	        android:layout_gravity="center_vertical"
	        android:layout_height="wrap_content" >		    
	        <SeekBar
		        android:id="@+id/fuscale_marcoFuScaleSeekBar"
		        android:background="@drawable/fu_colourbar"
		        android:gravity="bottom|center_vertical"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" />
    	</RelativeLayout>
        	    	                             
	</FrameLayout>

    <!-- Panel App Survey -->	    
    <ScrollView 
        android:id="@+id/fuscale_container_appsurvey"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFFFF"
	    android:visibility="gone">        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginTop="5dp"
	            android:text="@string/main_panel_appsurvey_title"
	            android:textSize="28sp"
				android:textColor="#AA000000"
	            android:textStyle="bold" />
	        
				<LinearLayout
				    android:layout_marginTop="10dip"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">	
					<TextView
						android:textColor="#FF4CA4BC"
		       	        android:layout_gravity="center_vertical"
		       			android:layout_marginLeft="5dip"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/main_panel_appsurvey_easytouse"
				        android:textSize="16sp" />
					<RadioGroup
				        android:id="@+id/radio_appsurvey_easytouse_radiogroup"
				        android:layout_marginTop="5dip"
				        android:layout_width="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="right"
				        android:layout_height="wrap_content" >
				        <RadioButton
				            android:id="@+id/radio_appsurvey_easytouse_yes"
				            android:layout_marginLeft="10dip"
				            android:layout_marginRight="20dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_yes" />
				        <RadioButton
				            android:id="@+id/radio_appsurvey_easytouse_no"
				            android:layout_marginLeft="20dip"
				            android:layout_marginRight="10dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_no" />
					</RadioGroup>			        			        					
				</LinearLayout>
				<LinearLayout
				    android:layout_marginTop="10dip"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">	
					<TextView
						android:textColor="#FF4CA4BC"
		       	        android:layout_gravity="center_vertical"
		       			android:layout_marginLeft="5dip"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/main_panel_appsurvey_matchbars"
				        android:textSize="16sp" />
					<RadioGroup
				        android:id="@+id/radio_appsurvey_matchbars_radiogroup"
				        android:layout_marginTop="5dip"
				        android:layout_width="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="right"
				        android:layout_height="wrap_content" >
				        <RadioButton
				            android:id="@+id/radio_appsurvey_matchbars_yes"
				            android:layout_marginLeft="10dip"
				            android:layout_marginRight="20dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_yes" />
				        <RadioButton
				            android:id="@+id/radio_appsurvey_matchbars_no"
				            android:layout_marginLeft="20dip"
				            android:layout_marginRight="10dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_no" />
					</RadioGroup>			        			        					
				</LinearLayout>
				<LinearLayout
				    android:layout_marginTop="10dip"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">	
					<TextView
						android:textColor="#FF4CA4BC"
		       	        android:layout_gravity="center_vertical"
		       			android:layout_marginLeft="5dip"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/main_panel_appsurvey_lookwater"
				        android:textSize="16sp" />
					<RadioGroup
				        android:id="@+id/radio_appsurvey_lookwater_radiogroup"
				        android:layout_marginTop="5dip"
				        android:layout_width="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="right"
				        android:layout_height="wrap_content" >
				        <RadioButton
				            android:id="@+id/radio_appsurvey_lookwater_water"
				            android:layout_marginLeft="10dip"
				            android:layout_marginRight="20dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_lookwater_water" />
				        <RadioButton
				            android:id="@+id/radio_appsurvey_lookwater_photo"
				            android:layout_marginLeft="20dip"
				            android:layout_marginRight="10dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_lookwater_photo" />
					</RadioGroup>			        			        					
				</LinearLayout>
				<LinearLayout
				    android:layout_marginTop="10dip"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">	
					<TextView
						android:textColor="#FF4CA4BC"
		       	        android:layout_gravity="center_vertical"
		       			android:layout_marginLeft="5dip"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/main_panel_appsurvey_design"
				        android:textSize="16sp" />
					<RadioGroup
				        android:id="@+id/radio_appsurvey_design_radiogroup"
				        android:layout_marginTop="5dip"
				        android:layout_width="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="right"
				        android:layout_height="wrap_content" >
				        <RadioButton
				            android:id="@+id/radio_appsurvey_design_yes"
				            android:layout_marginLeft="10dip"
				            android:layout_marginRight="20dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_yes" />
				        <RadioButton
				            android:id="@+id/radio_appsurvey_design_no"
				            android:layout_marginLeft="20dip"
				            android:layout_marginRight="10dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_no" />
					</RadioGroup>			        			        					
				</LinearLayout>
				<LinearLayout
				    android:layout_marginTop="10dip"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">	
					<TextView
						android:textColor="#FF4CA4BC"
		       	        android:layout_gravity="center_vertical"
		       			android:layout_marginLeft="5dip"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/main_panel_appsurvey_secchi"
				        android:textSize="16sp" />
					<RadioGroup
				        android:id="@+id/radio_appsurvey_secchi_radiogroup"
				        android:layout_marginTop="5dip"
				        android:layout_width="wrap_content"
				        android:orientation="horizontal"
				        android:layout_gravity="right"
				        android:layout_height="wrap_content" >
				        <RadioButton
				            android:id="@+id/radio_appsurvey_secchi_with"
				            android:layout_marginLeft="10dip"
				            android:layout_marginRight="20dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_secchi_with" />
				        <RadioButton
				            android:id="@+id/radio_appsurvey_secchi_without"
				            android:layout_marginLeft="20dip"
				            android:layout_marginRight="10dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_secchi_without" />
				        <RadioButton
				            android:id="@+id/radio_appsurvey_secchi_didnotuseit"
				            android:layout_marginLeft="20dip"
				            android:layout_marginRight="10dip"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:text="@string/main_panel_appsurvey_secchi_didnotuseit" />
					</RadioGroup>			        			        					
				</LinearLayout>
				<LinearLayout
				    android:layout_marginTop="10dip"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:orientation="vertical">	
					<TextView
						android:textColor="#FF4CA4BC"
		       	        android:layout_gravity="center_vertical"
		       			android:layout_marginLeft="5dip"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/main_panel_appsurvey_suggestions"
				        android:textSize="16sp" />
					<EditText
					    android:id="@+id/edittext_appsurvey_suggestion"
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:ems="10"
					    android:inputType="textMultiLine" />
				</LinearLayout>				
				<FrameLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="50dp"
		            android:layout_marginRight="50dip"
		            android:layout_marginTop="10dip"
		            android:layout_marginBottom="10dip"
		            android:layout_gravity="center">
		            <Button
		                android:id="@+id/appsurvey_btBack"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="left|bottom"
		            	android:layout_marginRight="5dip"
		            	android:textSize="24sp"
		                android:onClick="onClickAppSurveyBack"
		                android:text="@string/main_panel_appsurvey_button_back" />	
		            <Button
		                android:id="@+id/appsurvey_btSend"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_gravity="right|bottom"
		            	android:layout_marginLeft="5dip"
		            	android:textSize="24sp"
		                android:onClick="onClickAppSurveySend"
		                android:text="@string/main_panel_appsurvey_button_send" />	            
		        </FrameLayout>
		</LinearLayout>
	</ScrollView>
    
    <!-- Panel Questions -->	    
    <ScrollView 
        android:id="@+id/fuscale_container_questions"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFFFF"
	    android:visibility="gone">        
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">	
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:layout_marginTop="5dp"
	            android:text="@string/main_panel_questions_title"
	            android:textSize="28sp"
				android:textColor="#AA000000"
	            android:textStyle="bold" />
            <LinearLayout 
			    android:layout_width="match_parent"
			    android:background="@drawable/linear_layout_border"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:paddingBottom="10dip"
			    android:layout_marginTop="5dip"
			    android:layout_marginLeft="5dip"
			    android:layout_marginRight="5dip">
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:layout_marginTop="10dp"
					android:textColor="#FF4CA4BC"
		            android:textSize="16sp"
		            android:text="@string/main_panel_questions_cloud_fraction" />		        
		        	<LinearLayout
		        	    android:orientation="vertical"
		        	    android:layout_width="match_parent"
		            	android:layout_height="wrap_content" >
		        	    		        	   
			        	<LinearLayout
			        	    android:layout_marginTop="5dip"
			        	    android:baselineAligned="false"
			        	    android:orientation="horizontal"
			        	    android:layout_width="match_parent"
			            	android:layout_height="50dip" >
				        	<LinearLayout
			        	    	android:id="@+id/fuscale_questions_cloud_clear"			        	   
				        	    android:onClick="onCloudFractionClick"
				        	    android:padding="5dip"
				        	    android:layout_weight="1" 
				        	    android:layout_marginLeft="5dip"
				        	    android:orientation="horizontal"
				        	    android:layout_width="0dip"
				            	android:layout_height="wrap_content" >		        	   
				        	    <ImageView
			        	    		android:id="@+id/fuscale_image_cloud_clear"			        	   
				        	        android:layout_gravity="center_vertical"
						            android:src="@drawable/cloud_clear"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"/>   
							    <TextView
									android:textColor="#FF4CA4BC"
				        	        android:layout_gravity="center_vertical"
					       			android:layout_marginLeft="5dip"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:text="@string/main_panel_questions_cloud_octas_clear"
							        android:textSize="16sp" />
							</LinearLayout>			        	    
				        	<LinearLayout
			        	    	android:id="@+id/fuscale_questions_cloud_few"			        	   
				        	    android:onClick="onCloudFractionClick"
				        	    android:padding="5dip"				        	    
				        	    android:layout_weight="1" 
					       		android:layout_marginLeft="5dip"
				        	    android:orientation="horizontal"
				        	    android:layout_width="0dip"
				            	android:layout_height="wrap_content" >		        	   
				        	    <ImageView
			        	    		android:id="@+id/fuscale_image_cloud_few"			        	   
				        	        android:layout_gravity="center_vertical"
						            android:src="@drawable/cloud_few"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"/>   
							    <TextView
							       	android:textColor="#FF4CA4BC"							        
				        	        android:layout_gravity="center_vertical"
					       			android:layout_marginLeft="5dip"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"
							        android:text="@string/main_panel_questions_cloud_octas_few"
							        android:textSize="16sp" />
							</LinearLayout>			        	    
						</LinearLayout>
			        	<LinearLayout
			        	    android:layout_marginTop="5dip"
			        	    android:baselineAligned="false"
			        	    android:orientation="horizontal"
			        	    android:layout_width="match_parent"
			            	android:layout_height="50dip" >
				        	<LinearLayout
			        	    	android:id="@+id/fuscale_questions_cloud_scattered"			        	   
				        	    android:onClick="onCloudFractionClick"
				        	    android:padding="5dip"				        	    
				        	    android:layout_weight="1" 
				        	    android:layout_marginLeft="5dip"
				        	    android:orientation="horizontal"
				        	    android:layout_width="0dip"
				            	android:layout_height="wrap_content" >		        	   
				        	    <ImageView
			        	    		android:id="@+id/fuscale_image_cloud_scattered"			        	   
				        	        android:layout_gravity="center_vertical"
						            android:src="@drawable/cloud_scattered"
							        android:layout_width="wrap_content"
							        android:layout_height="wrap_content"/>   
